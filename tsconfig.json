{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": ".build",
    "lib": [
      "ESNext"
    ],
    "rootDir": "./",
    "target": "ES2020",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}